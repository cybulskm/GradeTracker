<Window x:Class="GradeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeTracker"
        mc:Ignorable="d"
        Title="GradeTracker" Height="450" Width="800">
    <Grid Margin="0,0,10,0">
        <Label Content="Grade Tracker" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="55" Width="196" FontSize="30"/>

        <Label Content="Courses" HorizontalAlignment="Center" Margin="0,89,0,0" FontSize="20" VerticalAlignment="Top" RenderTransformOrigin="0.586,0.56"/>
        <Button Content="Add Course" HorizontalAlignment="Left" Margin="687,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.429,-1.55" Height="32" Width="82" Click="Button_Click"/>
        <DataGrid x:Name="CourseGrid" Margin="20,130,20,20"/>

    </Grid>
</Window>
